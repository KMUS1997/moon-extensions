  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),debug)
  RESCOMP = windres
  TARGETDIR = ../../bin/Debug
  TARGET = $(TARGETDIR)/math3d.so
  OBJDIR = ../../obj/math3d/Debug
  DEFINES += -DDEBUG -DSOL_ALL_SAFETIES_ON
